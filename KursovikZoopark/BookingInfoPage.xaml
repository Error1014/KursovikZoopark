<Page x:Class="KursovikZoopark.BookingInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovikZoopark"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="BookingInfoPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="nameExTaxtBlock" Text="Название" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Height="48" Width="158"/>

        <TextBlock Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,20,0" FontSize="26" Width="155">
            <Run x:Name="priceTextBlock" Text="2000" ></Run>
            <Run>руб.</Run>
        </TextBlock>
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" Margin="50,0,0,0" FontSize="26" Width="234">
            <Run>до</Run>
            <Run x:Name="maxManTextBlock">10</Run>
            <Run>человек</Run>
        </TextBlock>
        <TextBlock Grid.Row="3"  HorizontalAlignment="Left" Margin="50,0,0,0" FontSize="26" Width="300">
                <Run>Длительность:</Run>
                <Run x:Name="durationTextBlock">45</Run>
                <Run>мин</Run>
        </TextBlock>
        <Button Grid.Row="4" Background="#FF6EBE2D" Width="200" Content="Бронировать" Margin="0,10,0,10" FontSize="20" FontWeight="Bold" Click="BookingEx"/>
    </Grid>
</Page>
