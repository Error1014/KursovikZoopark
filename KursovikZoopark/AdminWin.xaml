<Window x:Class="KursovikZoopark.AdminWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursovikZoopark"
        mc:Ignorable="d"
        Title="AdminWin" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="600*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Background="#EAFFD0">
                <Button Background="#8CC248" Content="Забронированные" Height="40" Margin="0,75,0,0" Click="NavBookingPageAdmin"/>
                <Button Background="#8CC248" Content="История" Height="40" Margin="0,15,0,0"/>
                <Button Background="#8CC248" Content="Скидки и акции" Height="40" Margin="0,15,0,0"/>
                <Button Background="#8CC248" Content="Выйти из аккаунта" Height="40" Margin="0,35,0,0" Click="Exit"/>
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
