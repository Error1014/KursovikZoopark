<Window x:Class="KursovikZoopark.ClientWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursovikZoopark"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="580*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#EAFFD0" Grid.ColumnSpan="2">
            <Button Background="#8CC248" Content="Экскурсии" Height="40" Margin="0,75,0,0" Click="NavListExkursion"/>
            <Button Background="#8CC248" Content="История" Height="40" Margin="0,15,0,0" Click="NavHistory"/>
            <Button Background="#8CC248" Content="Скидки и акции" Height="40" Margin="0,15,0,0"/>
            <Button Background="#8CC248" Content="Избранное" Height="40" Margin="0,15,0,0"/>
            <Button Background="#8CC248" Content="Выйти из аккаунта" Height="40" Margin="0,35,0,0" Click="Exit"/>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
